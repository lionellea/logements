{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_errors(form) }}
    <div class="row">
	<div class="col-md-6">
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.username) }}
                    <div class="form-material">
                        {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'for': 'register2-username'}}) }}
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'type': 'text', 'id': 'register2-username', 'name': 'register2-username', 'placeholder': 'Entrez votre nom...'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.email) }}
                    <div class="form-material">
                        {{ form_label(form.email, "Email", {'label_attr': {'for': 'register2-email'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'type': 'email', 'id': 'register2-email', 'name': 'register2-email', 'placeholder': 'Entrez votre email...'}}) }}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.plainPassword.first) }}
                    <div class="form-material">
                        {{ form_label(form.plainPassword.first, "Mot de passe", {'label_attr': {'for': 'register2-password'}}) }}
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'type': 'password', 'id': 'register2-password', 'name': 'register2-password', 'placeholder': 'Entrez le mot de passe...'}}) }}
                    </div>
                </div>
            </div> 
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.plainPassword.second) }}
                    <div class="form-material">
                        {{ form_label(form.plainPassword.second, "Confirmation de mot de passe", {'label_attr': {'for': 'register2-password'}}) }}
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'type': 'password', 'id': 'register2-password', 'name': 'register2-password', 'placeholder': 'Entrez de nouveau votre mot de passe...'}}) }}
                    </div>
                </div>
            </div> 
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.pays) }}
                    <div class="form-material">
                        {{ form_label(form.pays, "Pays", {'label_attr': {'for': 'example2-select2'}}) }}
                        {{ form_widget(form.pays, {'attr': {'class': 'js-select2 form-control pays', 'data-placeholder': 'Choisisez un pays...'}}) }}
                    </div>
                </div>
            </div>
                    <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.ville) }}
                    <div class="form-material">
                        {{ form_label(form.ville, "Ville", {'label_attr': {'for': 'register2-username'}}) }}
                        {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'type': 'text', 'id': 'register2-username', 'name': 'register2-username', 'placeholder': 'Entrez la ville...'}}) }}
                    </div>
                </div>
            </div> 
            <div class="form-group">
                <div class="col-xs-12">
                    {{ form_errors(form.telephone) }}
                    <div class="form-material">
                        {{ form_label(form.telephone, "Numero de téléphone", {'label_attr': {'for': 'register2-username'}}) }}
                        
                        <div class="col-xs-12">
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'type': 'text', 'id': 'register2-username', 'name': 'register2-username', 'placeholder': 'Entrez votre numero de téléphone ...'}}) }}
                    </div>
                    </div>
                </div>
            </div>
            <div class="form-group" style="clear: both; margin-top: 100px;">
                <div class="form-material">
                        {{ form_label(form.telephoneWhatsapp, "Numero de téléphone", {'label_attr': {'for': 'register2-username'}}) }}
                        
                        <div class="col-xs-12">
                            {{ form_widget(form.telephoneWhatsapp, {'attr': {'class': 'form-control', 'type': 'text', 'id': 'register2-username', 'name': 'register2-username', 'placeholder': 'Entrez votre numero de téléphone ...'}}) }}
                    </div>
                    </div>
            </div>
            <div class="form-group m-b-0">
            <div class="col-md-12">
                <input class="btn btn-app-teal" type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>        
        </div>             
    
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}